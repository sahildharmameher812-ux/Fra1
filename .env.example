# FRA Atlas Environment Configuration

# Environment
NODE_ENV=production
PORT=5000

# Database - Use MongoDB Atlas for production
MONGODB_URI=your_mongodb_atlas_connection_string

# JWT Secret - Generate a secure random string
JWT_SECRET=your_secure_jwt_secret_key

# File Upload Settings
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads

# Satellite API Keys (Optional)
SENTINEL_API_KEY=your_sentinel_api_key
LANDSAT_API_KEY=your_landsat_api_key
GOOGLE_EARTH_API_KEY=your_google_earth_api_key

# AI/ML Settings
TENSORFLOW_BACKEND=cpu
OCR_CONFIDENCE_THRESHOLD=0.8

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Frontend URL - Update after deploying frontend
CLIENT_URL=https://your-frontend-url.vercel.app

# Government API Keys (Optional)
DIGITAL_INDIA_API_KEY=your_digital_india_key
BHARAT_MAP_API_KEY=your_bharat_map_key
