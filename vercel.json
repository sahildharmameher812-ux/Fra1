{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/tiles/:match*", "destination": "/api/tiles.js" },
    { "source": "/static/:match*", "destination": "/client/build/static/:match*" },
    { "source": "/:all*(js|css|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|eot)", "destination": "/client/build/:all*" },
    { "source": "/(.*)", "destination": "/client/build/index.html" }
  ]
}
