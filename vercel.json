{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/build" }
    },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/tiles/(.*)", "dest": "/api/tiles.js" },
    { "src": "/static/(.*)", "dest": "/client/build/static/$1" },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|eot))", "dest": "/client/build/$1" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ]
}
